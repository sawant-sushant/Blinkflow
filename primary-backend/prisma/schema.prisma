generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String?
  provider  String
  flows     Flow[]
}

model Flow {
  id           Int           @id @default(autoincrement())
  name         String
  userId       Int
  user         User          @relation(fields: [userId], references: [id])
  flowTrigger  FlowTrigger
  flowActions  FlowAction[]
  flowRuns     FlowRun[]
}

model AvailableAction {
  id          Int           @id @default(autoincrement())
  name        String
  image       String
  flowActions FlowAction[]
}

model AvailableTrigger {
  id            Int           @id @default(autoincrement())
  name          String
  image         String
  flowTriggers  FlowTrigger[]
}

model FlowAction {
  id              Int              @id @default(autoincrement())
  flowId          Int
  flow            Flow             @relation(fields: [flowId], references: [id])
  metadata        Json
  actionTypeId    Int
  actionType      AvailableAction  @relation(fields: [actionTypeId], references: [id])
  sortingOrder    Int              @default(0)
}

model FlowTrigger {
  id            Int               @id @default(autoincrement())
  flowId        Int               
  flow          Flow              @relation(fields: [flowId], references: [id])
  metadata      Json
  triggerTypeId Int
  triggerType   AvailableTrigger  @relation(fields: [triggerTypeId], references: [id])
}

model FlowRun {
  id                             Int       @id @default(autoincrement())
  metadata                       Json
  flowId                         Int
  flow                           Flow      @relation(fields: [flowId], references: [id])
  status                         FlowRunStatus
  triggeredAt                    DateTime  @default(now())
  prettyFlowRunMetadataMessage   String
}

model FlowRunOutBox {
  id         Int      @id @default(autoincrement())
  flowRunID  Int
}

enum FlowRunStatus {
	PENDING
	RUNNING
	SUCCESS
	FAILED
}